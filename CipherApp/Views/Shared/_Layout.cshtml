<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Styles/Layout.css">
    <script src="~/MyScript/Layout.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    
    <div class="navbar-fixed-top">
        <div class="logoContainer"></div>
        <a href="@Url.Action("All","Cipher")">          
        <img src="~/Assets/logoC.png" alt="logo" /></img>
        </a>

        </asp:HyperLink>
            <div class="nameContainer">
                @if (Constants.isProfLogged == true)
                {
                    @Html.ActionLink("Prof." + @Constants.name.ToUpper(), "Settings", "Cont")
                }
                else if (Constants.isProfLogged == false)
                {
                    @Html.ActionLink("Stud." + @Constants.name.ToUpper(), "Settings", "Cont")
                }
                else
                {
                <div>Welcome</div>
                @Html.ActionLink("Login","Index", "Cont");
                }
            </div>
        <div class="right">
            @if (Constants.isProfLogged == true)
            {
                @Html.ActionLink("+Exercise", "AddExercise", "Exercise")
            }
            @if (Constants.isProfLogged == true)
            {
                <div class="download">
                    @Html.ActionLink("Download", "Download", "Exercise")
                </div>
            }
            else if (Constants.isProfLogged == false)
            {
                <div>@Constants.studentScore</div>
            }
            else {            
            <div></div>
            }
        </div>
        
    </div>

</body>
</html>
